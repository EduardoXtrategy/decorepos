<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <scsorting>
            <general>
                <desc_attributes>bestsellers,rating_summary,reviews_count,most_viewed,wished,new,saving</desc_attributes>
                <disable_methods>bestsellers,rating_summary,reviews_count,most_viewed,wished,saving,price_asc,price_desc</disable_methods>
            </general>
            <default_sorting>
                <search_1>holidays_counter</search_1>
                <search_2>seasons_counter</search_2>
                <search_3>new</search_3>
                <category_1>holidays_counter</category_1>
                <category_2>seasons_counter</category_2>
                <category_3>new</category_3>
            </default_sorting>
            <bestsellers>
                <exclude>canceled</exclude>
                <best_period>183</best_period>
            </bestsellers>
            <most_viewed>
                <viewed_period>90</viewed_period>
            </most_viewed>
        </scsorting>
    </default>
</config>
