<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Uzer_Newsletter::css/newsletter.css" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <referenceContainer name="content">
            <container name="block.success.container" htmlTag="div" htmlClass="block-success-container" before="-">
                <block class="Magento\Cms\Block\Block" name="newsletter_form_success">
                    <arguments>
                        <argument name="block_id" xsi:type="string">newsletter_form_success</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceBlock name="footer_newsletter" remove="true"/>
    </body>
</page>
