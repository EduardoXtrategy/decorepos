<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">product_banner_form.product_banner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product Banner Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>product_banner_form</namespace>
        <dataScope>data.general</dataScope>
        <deps>
            <dep>product_banner_form.product_banner_form_data_source</dep>
        </deps>
        <buttons>
            <button name="save" class="Uzer\Search\Block\Form\ProductBanner\Save"/>
            <button name="back" class="Uzer\Search\Block\Form\ProductBanner\Back"/>
            <button name="delete" class="Uzer\Search\Block\Form\ProductBanner\Delete"/>
        </buttons>
    </settings>
    <dataSource name="product_banner_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="product_banner/productbanner/save"/>
        </settings>
        <dataProvider class="Uzer\Search\Ui\DataProvider\ProductBannerDataProvider"
                      name="product_banner_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10" class="Uzer\Search\Ui\Component\Form\Fieldset">
        <settings>
            <label translate="true">General</label>
        </settings>
        <field name="entity_id" sortOrder="0" formElement="hidden">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">entity_id</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Entity ID</label>
                <dataScope>entity_id</dataScope>
            </settings>
        </field>
        <field name="attribute_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Uzer\Search\Model\Source\AttributeOptions</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">required</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Product type Options</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">attribute_id</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="content" sortOrder="50" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">100px</item>
                        <item name="add_variables" xsi:type="boolean">true</item>
                        <item name="add_widgets" xsi:type="boolean">true</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
                    <item name="source" xsi:type="string">content</item>
                </item>
            </argument>
            <settings>
                <label>Content</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <rows>8</rows>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
