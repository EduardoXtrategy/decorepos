<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <script src="Uzer_Catalog::js/cart.js"/>
    </head>
    <body>
        <referenceBlock name="checkout.cart.form">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Uzer_Catalog::checkout/cart.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Uzer_Catalog::checkout/item.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
