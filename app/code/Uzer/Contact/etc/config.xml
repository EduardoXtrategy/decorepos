<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <samples>
            <configuration>
                <emails>digitaldecowraps@gmail.com</emails>
            </configuration>
        </samples>
        <decowraps>
            <contact>
                <notification>decowraps_contact_notification</notification>
            </contact>
        </decowraps>
        <recaptcha_frontend>
            <type_for>
                <contactform/>
            </type_for>
        </recaptcha_frontend>
        <customer>
            <captcha>
                <shown_to_logged_in_user>
                    <custom_form>1</custom_form>
                </shown_to_logged_in_user>
                <always_for>
                    <custom_form>1</custom_form>
                </always_for>
            </captcha>
        </customer>
        <captcha translate="label">
            <frontend>
                <areas>
                    <custom_form>
                        <label>Contact form</label>
                    </custom_form>
                </areas>
            </frontend>
        </captcha>
    </default>
</config>
